<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    android:background="@android:color/transparent">



    <ImageView
        android:id="@+id/img_top_dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/meal_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:elevation="5dp"
        />


    <android.support.v7.widget.CardView
        android:layout_marginTop="70dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfbfbf"
        >

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="Titulo del mensaje"/>


            <TextView
                android:id="@+id/tv_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Mensaje que se quiere trasmitir al usuario por favor haga caso a este mansaje"/>


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="@color/secondaryTextColor"
                android:textSize="19sp"
                android:textStyle="bold"
                android:background="@drawable/bg_btn"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>